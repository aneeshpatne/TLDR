{
    "manifest_version": 3,
    "name": "TLDR",
    "version": "1.0",
    "description": "Summarize web pages with AI.",
    "permissions": ["activeTab", "scripting", "tabs"],
    "action": {
      "default_popup": "popup/popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "content_scripts": [{
      "matches": ["<all_urls>"],
      "js": ["libs/readability.min.js", "content.js"]
    }],
    "host_permissions": ["<all_urls>"]
  }